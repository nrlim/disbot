// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator client_worker {
  provider = "prisma-client-js"
  output   = "../worker/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId], name: "provider_providerAccountId")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  discordAccounts DiscordAccount[]
  telegramAccounts TelegramAccount[]
  
  // Custom Relation to MirrorConfig
  configs MirrorConfig[]
  
  plan    Plan     @default(FREE)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Plan {
  FREE
  STARTER
  PRO
  ELITE
}

model MirrorConfig {
  id                String       @id @default(cuid())
  
  // General Configuration
  sourcePlatform    PlatformType @default(DISCORD)
  type              MirrorType   @default(CUSTOM_HOOK)
  active            Boolean      @default(true)
  status            String       @default("ACTIVE") // ACTIVE, TOKEN_INVALID, RATE_LIMITED
  

  // Source Configuration
  sourceGuildName   String?      // Optional: Friendly name for UI
  sourceChannelId   String       // The ID of the channel/chat to watch (Universal)
  
  // Discord Source Reference
  discordAccountId  String?      
  discordAccount    DiscordAccount? @relation(fields: [discordAccountId], references: [id])
  
  // Telegram Source Reference
  telegramAccountId String?
  telegramAccount   TelegramAccount? @relation(fields: [telegramAccountId], references: [id])
  
  // Target Configuration
  targetWebhookUrl  String?      // Digunakan jika type == CUSTOM_HOOK
  targetChannelId   String?      // Digunakan jika type == MANAGED_BOT
  
  // Ownership & Timestamps
  userId            String
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  lastActiveAt      DateTime?

  @@index([userId])
  @@index([sourcePlatform])
  @@index([discordAccountId])
  @@index([telegramAccountId])
}

model DiscordAccount {
  id              String         @id @default(cuid())
  userId          String
  discordId       String?
  username        String
  discriminator   String?
  avatar          String?
  token           String         
  valid           Boolean        @default(true)
  
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  mirrorConfigs   MirrorConfig[]
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([userId])
}


model TelegramAccount {
  id              String         @id @default(cuid())
  userId          String
  telegramId      String?
  username        String?
  phone           String
  sessionString   String         @db.Text
  valid           Boolean        @default(true)
  
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  mirrorConfigs   MirrorConfig[]
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([userId])
}

enum MirrorType {
  CUSTOM_HOOK
  MANAGED_BOT
}

enum PlatformType {
  DISCORD
  TELEGRAM
}
