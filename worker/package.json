{
    "name": "disbot-worker",
    "version": "1.0.0",
    "description": "Discord Mirroring Engine",
    "main": "dist/engine.js",
    "scripts": {
        "install:clean": "npm install --ignore-scripts",
        "prisma:generate": "prisma generate --schema=../prisma/schema.prisma",
        "build": "npm run prisma:generate && tsc",
        "start": "pm2 start dist/engine.js --name disbot-worker",
        "restart": "pm2 restart disbot-worker",
        "logs": "pm2 logs disbot-worker"
    },
    "dependencies": {
        "@prisma/client": "^6.19.2",
        "axios": "^1.13.5",
        "discord.js": "^14.16.3",
        "discord.js-selfbot-v13": "^3.4.3",
        "dotenv": "^16.4.5",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "telegram": "^2.26.22"
    },
    "devDependencies": {
        "@types/node": "^20.10.8",
        "prisma": "^6.19.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
